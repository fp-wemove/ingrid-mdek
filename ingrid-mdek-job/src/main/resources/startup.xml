<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<!-- import services like hibernate -->
	<import resource="job-framework.xml"/>
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" id="configuration">
		<property name="locations">
			<value>classpath:default.properties</value>
		</property>
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
	</bean>
	<bean class="org.springframework.context.support.ClassPathXmlApplicationContext" id="org.springframework.context.support.ClassPathXmlApplicationContext">
		<constructor-arg value="job-services.xml"/>
	</bean>
</beans>
