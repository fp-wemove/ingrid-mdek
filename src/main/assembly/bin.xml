<?xml version="1.0" encoding="utf-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>installer</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <moduleSets>
    <moduleSet>
      <!-- Enable access to all projects in the current multimodule build! -->
      <useAllReactorProjects>true</useAllReactorProjects>
      
      <includes>
        <include>de.ingrid.mdek:ingrid-mdek-job</include>
      </includes>
      <binaries>
        <outputDirectory>${project.build.finalName}/lib</outputDirectory>
        <unpack>false</unpack>
        <dependencySets>
          <dependencySet>
            <scope>runtime</scope>
            <excludes>
              <exclude>de.ingrid:ingrid-installer</exclude>
            </excludes>
          </dependencySet>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <fileSet>
      <directory>../ingrid-mdek-job/src/main/release/conf</directory>
      <outputDirectory>${project.build.finalName}/conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../ingrid-mdek-job/src/main/release/scripts</directory>
      <outputDirectory>${project.build.finalName}/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../ingrid-mdek-services/src/main/release/conf</directory>
      <outputDirectory>${project.build.finalName}/conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../src/main/release/ant-installer</directory>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>../target/installer</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../target/site</directory>
      <outputDirectory>${project.build.finalName}/doc</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
